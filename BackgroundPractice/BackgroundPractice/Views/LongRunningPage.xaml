<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BackgroundPractice.LongRunningPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Visual="Material"
    mc:Ignorable="d">
    <ContentPage.Padding>
        <OnPlatform
            x:TypeArguments="Thickness"
            Android="5, 20, 5, 5"
            iOS="5, 20, 5, 5" />
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="notificationTest" Text="Notification Test" />
            <Button x:Name="startLongRunningTask" Text="Start Long Running Task" />
            <Button x:Name="stopLongRunningTask" Text="Stop Long Running Task" />
            <Label
                x:Name="ticker"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                Text="" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>